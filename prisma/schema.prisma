generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model user {
    id        BigInt   @id @default(autoincrement()) @db.UnsignedBigInt
    email     String
    password  String?
    avatar    String?
    github    String?
    douyin    String?
    weibo     String?
    wakatime  String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model categroy {
    id       BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
    title    String
    articles article[]
}

model article {
    id         BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
    title      String
    content    String    @db.Text
    thumb      String
    createdAt  DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
    categroy   categroy? @relation(fields: [categroyId], references: [id], onDelete: Cascade)
    categroyId BigInt?   @db.UnsignedBigInt
}
